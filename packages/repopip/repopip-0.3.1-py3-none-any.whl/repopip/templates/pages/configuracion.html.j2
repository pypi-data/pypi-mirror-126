{% extends 'base.html' %}

{% block content %}
<div class="container">

    <div class="prop">
        <div class="prop-title">
            <h3></h3>
        </div>
        <p class="prop-message"></p>
    </div>

    <div class="backdrop"></div>

    <div class="message message-y" id="configs" style="display: none;">
        <p>{{ confg_aplly }}</p>
        <ul> </ul>
    </div>

    <div class="guide">
        <h2 class="guide-title">{{ configuration }}</h2>
        <p>{{ guide_p_1 }}</p>
        <p>{{ guide_p_2 }}</p>
    </div>

    <div class="conf-blocks">
        <div class="block" id="Global">
            <h3 class="block-title">{{ global }}</h3>
            <p class="conf-description"> {{ global_desc }}</p>
        </div>
        <div class="block" id="User">
            <h3 class="block-title">{{ user }}</h3>
            <p class="conf-description"> {{ user_desc }}</p>
        </div>
        <div class="block" id="Env">
            <h3 class="block-title">{{ enviroment }}</h3>
            <p class="conf-description"> {{ enviroment_desc }}</p>
        </div>
    </div>

    <div class="edit-config">
        <div class="select" id="standar">
            <p>{{ conf_type_1 }}</p>
        </div>
        <div class="select" id="personalised">
            <p>{{ conf_type_2 }}</p>
            <form id="conf-form" class="collapse">
                <textarea name="conf" rows="6" spellcheck="false">[global] 
index-url=http://127.0.0.1:5000/simple/</textarea>
            </form>
        </div>
    </div>

</div>

<div class="conf-actions">
    <button class="btn btn-blue" id="Apply">{{ apply }}</button>
    <button class="btn btn-red" id="Cancel">{{ cancel }}</button>
</div>

<script src="{{ url_for('static', filename='js/script.js') }}"></script>

{% endblock content %}