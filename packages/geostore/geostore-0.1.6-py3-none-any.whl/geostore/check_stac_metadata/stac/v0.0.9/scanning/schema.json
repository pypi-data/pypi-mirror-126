{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://linz.github.io/stac/v0.0.9/scanning/schema.json",
  "title": "Scanning Extension",
  "description": "STAC Scanning Extension for STAC Items.",
  "allOf": [
    {
      "type": "object",
      "required": ["type", "properties", "assets"],
      "properties": {
        "type": {
          "const": "Feature"
        },
        "properties": {
          "$ref": "#/definitions/fields"
        },
        "assets": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/fields"
          }
        }
      }
    },
    {
      "$ref": "#/definitions/stac_extensions"
    }
  ],
  "definitions": {
    "stac_extensions": {
      "type": "object",
      "required": ["stac_extensions"],
      "properties": {
        "stac_extensions": {
          "type": "array",
          "contains": {
            "const": "https://linz.github.io/stac/v0.0.9/scanning/schema.json"
          }
        }
      }
    },
    "fields": {
      "type": "object",
      "properties": {
        "scan:is_original": {
          "title": "Original Negative",
          "type": "boolean"
        },
        "scan:scanned": {
          "title": "Scanned Date",
          "type": "string",
          "pattern": "(\\+00:00|Z)$"
        }
      },
      "patternProperties": {
        "^(?!scan:)": {}
      },
      "additionalProperties": false
    }
  }
}
