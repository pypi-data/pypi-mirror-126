<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div data-key="stock" position="inside">
                <h2>OCA Stock Barcodes reader</h2>
                <div class="row mt16 o_settings_container">
                    <div
                        class="col-12 col-lg-6 o_setting_box"
                        title="Auto lots for inventory"
                    >
                        <div class="o_setting_left_pane">
                            <field name="stock_barcodes_inventory_auto_lot" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="stock_barcodes_inventory_auto_lot" />
                            <div class="text-muted">
                                Set a default value for scanner.
                            </div>
                            <div class="text-muted">
                                If checked, after a product barcode is read, the quantities will be distributed
                                among all existing lots by removal strategy order.
                            </div>
                            <div class="text-muted">
                                If user input more quantities than existing it, the exceeded quantities will be assigned to last lot
                            </div>
                        </div>
                    </div>
                    <div
                        class="col-12 col-lg-6 o_setting_box"
                        title="Track pending products at the picking wizard"
                        name="track_pending_products_picking_wizard"
                    >
                        <div class="o_setting_right_pane">
                            <label
                                string="Track pending products at the picking wizard"
                                for="track_pending_products_picking_wizard"
                            />
                            <div class="text-muted">
                               Add table to track pending products at picking stock wizard.
                               Non-detailed operations, detailed operations or both can be shown.
                            </div>
                            <div>
                                <field
                                    class="oe_inline"
                                    name="group_picking_barcode_wizard_non_detailed_operations"
                                />
                            Show non-detailed operations
                            </div>
                            <div>
                                <field
                                    name="group_picking_barcode_wizard_detailed_operations"
                                    class="oe_inline"
                                />
                                Show detailed operations
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
